<h1 class="has-text-centered"><strong>Potential Friends!</strong></h1>
<br>
<% @users.each do |user| %>
  <% if !user.avatar.nil? %>
    <%= link_to user_path(user) do %>
      <%= image_tag user.avatar.variant(resize_to_fill: [200, 200]) %>
    <% end %>
  <% else %>
    <%= link_to user.name, user_path(user) %>
  <% end %>
<% end %>
<br>
<%= link_to edit_user_registration_path do %>
  <span class="has-text-danger"><i class="fa fa-user fa-lg" aria-hidden="true"></i></span>
<% end %>
