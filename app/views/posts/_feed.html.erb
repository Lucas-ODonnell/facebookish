<div class="column is-half">
  <div class="media-content">
    <%= render 'posts/form' %>
  </div>
  <br />
  <% @posts.each do |post| %>
    <div class="box">
      <div class="media-content">
        <div class="content">
          <p>
          <% if post.images.attached? %>
            <% post.images.each do |pics| %>
              <%= image_tag pics.variant(resize_to_limit: [100, nil]) %>
            <% end %>
          <% end %>
          </p>
          <p><%= post.body %></p>
          <nav class="level-right">
            <div class="dropdown is-hoverable">
              <div class="dropdown-trigger">
                <span class="icon is-small">
                  <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                </span>
              </div>
              <div class="dropdown-menu" id="dropdown-menu" role="menu">
                <div class="dropdown-content">
                  <div class="dropdown-item">
                    <%= link_to "Edit", edit_post_path(post) %>
                  </div>
                  <div class="dropdown-item">
                    <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
                  </div>
                </div>
              </div>
          </nav>
             <h3>Comments (<%= post.comments.length %>)</h3> 
   <% post.comments.each do |comment| %>
     <article class="media">
       <figure class="media-left">
         <p class="image">
         <% unless comment.user.avatar.nil? %>
           <%= image_tag comment.user.avatar.variant(resize_to_limit: [50, nil]) %>
         <% end %>
         </p>
       </figure>
       <div class="media-content">
         <div class="content">
           <p>
           <strong><%= comment.name %></strong>
           <br>
           <%= comment.body %>
           </p>
         </div>
         <nav class="level is-mobile">
         </nav>
       </div>
       <div class="media-right">
         <% if comment.user.id == current_user.id %>
           <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
         <% end %>
       </div>
     </article>
   <% end %>
   <%= form_for [post, Comment.new] do |form| %>
     <div>
       <%= image_tag current_user.avatar.variant(resize_to_fill: [40, 40]), class: "style_image" %>
     </div>
     <div>
       <%= form.text_area :body %>
       <%= form.hidden_field :user_id, value: current_user.id %>
       <%= form.hidden_field :name, value: current_user.name %>
     </div>
     <div class="image-upload">
       <%= form.file_field :comment_image %>
     </div>
     <br />
     <%= form.button :comment, class: "button is-danger" %>
   <% end %>
</div>
</div>
</div>
<% end %>
</div> 
